<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/colorAccent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">
        <TextView
            android:id="@+id/textView_BackElous"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="65dp"
            android:layout_marginTop="10dp"
            android:text="ELOUS STORE"
            android:textSize="30sp"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:onClick="click"
            android:linksClickable="true"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="50dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">
                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    app:srcCompat="@drawable/ic_date_range_black_18dp"
                    android:layout_marginTop="39dp"
                    android:layout_marginLeft="40dp"/>
                <TextView
                    android:id="@+id/textView_ExpensesDate"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight=".8"
                    android:layout_marginTop="35dp"
                    android:layout_marginLeft="8dp"
                    android:maxLines="1"
                    android:textSize="15sp"
                    android:hint="Date"
                    android:inputType="text"
                    android:paddingLeft="5dp"/>
                <Button
                    android:id="@+id/button_ExpensesAddDate"
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="35dp"
                    android:layout_marginRight="50dp"
                    android:layout_weight=".2"
                    android:text="Add date"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    android:textColor="#0B4555"
                    android:background="@drawable/color_button"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:orientation="horizontal"
                android:weightSum="1">
                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    app:srcCompat="@drawable/ic_content_paste_black_18dp"
                    android:layout_marginTop="39dp"
                    android:layout_marginLeft="40dp"/>
                <EditText
                    android:id="@+id/editText_ExpenseName"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight=".8"
                    android:layout_marginTop="35dp"
                    android:layout_marginLeft="10dp"
                    android:maxLines="1"
                    android:hint="Name of Expense"
                    android:inputType="text"
                    android:background="@drawable/rounded_edittext"
                    android:paddingLeft="5dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:orientation="horizontal"
                android:weightSum="1">
                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    app:srcCompat="@drawable/ic_monetization_on_black_24dp"
                    android:layout_marginTop="39dp"
                    android:layout_marginLeft="40dp"/>
                <EditText
                    android:id="@+id/editText_ExpenseCost"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight=".8"
                    android:layout_marginTop="35dp"
                    android:layout_marginLeft="10dp"
                    android:maxLines="1"
                    android:hint="Expense Cost"
                    android:inputType="numberDecimal"
                    android:background="@drawable/rounded_edittext"
                    android:paddingLeft="5dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="200dp"
                android:orientation="horizontal" >
                <Button
                    android:id="@+id/button_ExpensesAdd"
                    android:layout_width="130dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="70dp"
                    android:layout_marginLeft="100dp"
                    android:text="Add Expense"
                    android:textSize="16sp"
                    android:textColor="#0B4555"
                    android:background="@drawable/color_button" />
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>