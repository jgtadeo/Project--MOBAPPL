<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">
                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    app:srcCompat="@drawable/ic_face_black_18dp"
                    android:layout_marginTop="39dp"
                    android:layout_marginLeft="40dp"/>
                <EditText
                    android:id="@+id/editText_ProductName"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight=".8"
                    android:layout_marginTop="35dp"
                    android:layout_marginLeft="10dp"
                    android:maxLines="1"
                    android:hint="Name"
                    android:inputType="text"
                    android:background="@drawable/rounded_edittext"
                    android:paddingLeft="5dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:orientation="horizontal"
                android:weightSum="1">
                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    app:srcCompat="@drawable/ic_content_paste_black_18dp"
                    android:layout_marginTop="39dp"
                    android:layout_marginLeft="40dp"/>
                <EditText
                    android:id="@+id/editText_ProductCategory"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight=".8"
                    android:layout_marginTop="35dp"
                    android:layout_marginLeft="10dp"
                    android:maxLines="1"
                    android:hint="Category"
                    android:inputType="number"
                    android:background="@drawable/rounded_edittext"
                    android:paddingLeft="5dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:orientation="horizontal"
                android:weightSum="1">
                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    app:srcCompat="@drawable/ic_monetization_on_black_24dp"
                    android:layout_marginTop="39dp"
                    android:layout_marginLeft="40dp"/>
                <EditText
                    android:id="@+id/editText_ProductCost"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight=".4"
                    android:layout_marginTop="35dp"
                    android:layout_marginLeft="10dp"
                    android:maxLines="1"
                    android:hint="Cost"
                    android:background="@drawable/rounded_edittext"
                    android:paddingLeft="5dp"/>
                <EditText
                    android:id="@+id/editText_ProductPrice"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight=".4"
                    android:layout_marginTop="35dp"
                    android:layout_marginLeft="10dp"
                    android:maxLines="1"
                    android:hint="Price"
                    android:background="@drawable/rounded_edittext"
                    android:paddingLeft="5dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="150dp"
                android:orientation="horizontal"
                android:weightSum="1">
                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    app:srcCompat="@drawable/ic_exposure_plus_1_black_24dp"
                    android:layout_marginTop="39dp"
                    android:layout_marginLeft="40dp"/>
                <EditText
                    android:id="@+id/editText_ProductQuantity"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight=".8"
                    android:layout_marginTop="35dp"
                    android:layout_marginLeft="10dp"
                    android:maxLines="1"
                    android:hint="Quantity"
                    android:inputType="number"
                    android:background="@drawable/rounded_edittext"
                    android:paddingLeft="5dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="200dp"
                android:orientation="horizontal"
                android:weightSum="1">
                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    app:srcCompat="@drawable/ic_face_black_18dp"
                    android:layout_marginTop="39dp"
                    android:layout_marginLeft="40dp"/>
                <EditText
                    android:id="@+id/editText_ProductWeight"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight=".8"
                    android:layout_marginTop="35dp"
                    android:layout_marginLeft="10dp"
                    android:maxLines="1"
                    android:hint="Weight"
                    android:inputType="numberDecimal"
                    android:background="@drawable/rounded_edittext"
                    android:paddingLeft="5dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="250dp">
                <Button
                    android:id="@+id/button_ProductsAdd"
                    android:layout_width="140dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginBottom="70dp"
                    android:layout_marginLeft="90dp"
                    android:text="Add"
                    android:textSize="16sp"
                    android:textColor="#0097A9"
                    android:background="@drawable/color_button" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="400dp">

                <View
                    android:layout_width="250dp"
                    android:layout_height="1dp"
                    android:background="@color/colorLine"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="50dp"
                    android:layout_marginLeft="40dp">
                </View>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="420dp">

                <TextView
                    android:id="@+id/textView_ProductsLogout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Logout"
                    android:linksClickable="true"
                    android:textColor="@color/colorWhite"
                    android:onClick="click"
                    android:textColorLink="#0097A9"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="140dp"/>

            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>