<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:weightSum="1">
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            app:srcCompat="@drawable/ic_face_black_18dp"
            android:layout_marginTop="39dp"
            android:layout_marginLeft="40dp"/>
        <EditText
            android:id="@+id/editText_SaleDate"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight=".8"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="10dp"
            android:hint="Date"
            android:inputType="text"
            android:background="@drawable/rounded_edittext"
            android:paddingLeft="5dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:orientation="horizontal"
        android:weightSum="1">
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            app:srcCompat="@drawable/ic_face_black_18dp"
            android:layout_marginTop="39dp"
            android:layout_marginLeft="40dp"/>
        <EditText
            android:id="@+id/editText_SaleGross"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight=".8"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="10dp"
            android:hint="Gross Sales"
            android:inputType="number"
            android:background="@drawable/rounded_edittext"
            android:paddingLeft="5dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="110dp"
        android:orientation="horizontal"
        android:weightSum="1">
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            app:srcCompat="@drawable/ic_face_black_18dp"
            android:layout_marginTop="39dp"
            android:layout_marginLeft="40dp"/>
        <EditText
            android:id="@+id/editText_SaleBread"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight=".4"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="10dp"
            android:hint="Bread"
            android:background="@drawable/rounded_edittext"
            android:paddingLeft="5dp"/>

        <EditText
            android:id="@+id/editText_SaleGrocery"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight=".4"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="10dp"
            android:hint="Grocery"
            android:background="@drawable/rounded_edittext"
            android:paddingLeft="5dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        android:orientation="horizontal"
        android:weightSum="1">
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            app:srcCompat="@drawable/ic_face_black_18dp"
            android:layout_marginTop="39dp"
            android:layout_marginLeft="40dp"/>
        <EditText
            android:id="@+id/editText_SaleEload"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight=".8"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="10dp"
            android:hint="E - load"
            android:background="@drawable/rounded_edittext"
            android:paddingLeft="5dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="210dp"
        android:orientation="horizontal"
        android:weightSum="1">
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            app:srcCompat="@drawable/ic_face_black_18dp"
            android:layout_marginTop="39dp"
            android:layout_marginLeft="40dp"/>
        <EditText
            android:id="@+id/editText_SaleSmart"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight=".26"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="10dp"
            android:hint="Smart"
            android:background="@drawable/rounded_edittext"
            android:paddingLeft="3dp"/>

        <EditText
            android:id="@+id/editText_SaleGlobe"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight=".26"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="10dp"
            android:hint="Globe"
            android:background="@drawable/rounded_edittext"
            android:paddingLeft="3dp"/>

        <EditText
            android:id="@+id/editText_SaleSun"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight=".26"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="10dp"
            android:hint="Sun"
            android:background="@drawable/rounded_edittext"
            android:paddingLeft="5dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="260dp">
        <Button
            android:id="@+id/button_SalesCompute"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="70dp"
            android:layout_marginLeft="90dp"
            android:text="Compute"
            android:textSize="16sp"
            android:textColor="#0097A9"
            android:background="@drawable/color_button" />
    </LinearLayout>

</RelativeLayout>