<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">
                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    app:srcCompat="@drawable/ic_date_range_black_18dp"
                    android:layout_marginTop="39dp"
                    android:layout_marginLeft="40dp"/>
                <EditText
                    android:id="@+id/editText_date"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight=".8"
                    android:layout_marginTop="35dp"
                    android:layout_marginLeft="10dp"
                    android:maxLines="1"
                    android:hint="Date"
                    android:inputType="text"
                    android:background="@drawable/rounded_edittext"
                    android:paddingLeft="5dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:orientation="horizontal"
                android:weightSum="1">
                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    app:srcCompat="@drawable/ic_content_paste_black_18dp"
                    android:layout_marginTop="39dp"
                    android:layout_marginLeft="40dp"/>
                <EditText
                    android:id="@+id/editText_expense"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight=".8"
                    android:layout_marginTop="35dp"
                    android:layout_marginLeft="10dp"
                    android:maxLines="1"
                    android:hint="Name of Expense"
                    android:inputType="number"
                    android:background="@drawable/rounded_edittext"
                    android:paddingLeft="5dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:orientation="horizontal"
                android:weightSum="1">
                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    app:srcCompat="@drawable/ic_monetization_on_black_24dp"
                    android:layout_marginTop="39dp"
                    android:layout_marginLeft="40dp"/>
                <EditText
                    android:id="@+id/editText_totalcost"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight=".8"
                    android:layout_marginTop="35dp"
                    android:layout_marginLeft="10dp"
                    android:maxLines="1"
                    android:hint="Total Cost"
                    android:inputType="number"
                    android:background="@drawable/rounded_edittext"
                    android:paddingLeft="5dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="200dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <Button
                    android:id="@+id/button"
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="70dp"
                    android:layout_marginLeft="40dp"
                    android:text="Done"
                    android:textSize="16sp"
                    android:textColor="#0097A9"
                    android:background="@drawable/color_button" />

                <Button
                    android:id="@+id/button_SalesCompute"
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="70dp"
                    android:layout_marginLeft="90dp"
                    android:text="Add More"
                    android:textSize="16sp"
                    android:textColor="#0097A9"
                    android:background="@drawable/color_button" />

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="420dp">

                <TextView
                    android:id="@+id/textView_ExpensesLogout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Logout"
                    android:linksClickable="true"
                    android:textColor="@color/colorWhite"
                    android:onClick="click"
                    android:textColorLink="#0097A9"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="140dp"/>

            </LinearLayout>



        </RelativeLayout>
    </ScrollView>
</RelativeLayout>