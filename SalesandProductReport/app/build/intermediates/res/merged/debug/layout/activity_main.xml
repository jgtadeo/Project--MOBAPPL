<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ph.edu.apc.renzo.salesandproductreport.Activities.LoginActivity"
    android:background="@color/colorAccent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="ELOUS STORE"
            android:textSize="30sp"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:gravity="center" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/colorLine"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/view2"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout"
        android:layout_alignBottom="@+id/view"
        android:layout_marginBottom="12dp">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Welcome!"
            android:textSize="20sp"
            android:textColor="@color/colorWhite"
            android:gravity="center"
            android:id="@+id/text123"/>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/colorLine"
        android:layout_marginTop="170dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:id="@+id/view"/>

    <Button
        android:id="@+id/button_MainSales"
        android:layout_width="180dp"
        android:layout_height="44dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="309dp"
        android:text="Sales"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:textSize="16sp"
        android:textColor="#0B4555"
        android:background="@drawable/color_button"
        android:drawableLeft="@drawable/ic_attach_money_black_24dp"/>

    <Button
        android:id="@+id/button_MainProducts"
        android:layout_width="180dp"
        android:layout_height="44dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="250dp"
        android:text="Products"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:textSize="16sp"
        android:textColor="#0B4555"
        android:background="@drawable/color_button"
        android:drawableLeft="@drawable/ic_shopping_cart_black_24dp"/>

    <Button
        android:id="@+id/button_MainGraph"
        android:layout_width="180dp"
        android:layout_height="44dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="190dp"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:text="Graph"
        android:textSize="16sp"
        android:textColor="#0B4555"
        android:background="@drawable/color_button"
        android:drawableLeft="@drawable/ic_trending_up_black_24dp"/>

    <Button
        android:id="@+id/button_MainExpenses"
        android:layout_width="180dp"
        android:layout_height="44dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="130dp"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:text="Expenses"
        android:textSize="16sp"
        android:textColor="#0B4555"
        android:background="@drawable/color_button"
        android:drawableLeft="@drawable/ic_money_off_black_24dp" />

    <Button
        android:id="@+id/button_MainRecords"
        android:layout_width="180dp"
        android:layout_height="44dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="70dp"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:text="Records"
        android:textSize="16sp"
        android:textColor="#0B4555"
        android:background="@drawable/color_button"
        android:drawableLeft="@drawable/ic_money_off_black_24dp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/colorLine"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="50dp">
    </View>

    <TextView
        android:id="@+id/textView_MainLogout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:linksClickable="true"
        android:textColor="@color/colorWhite"
        android:onClick="click"
        android:textColorLink="#0097A9"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp" />


</RelativeLayout>